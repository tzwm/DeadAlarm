<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/RootLayout"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WakeUp Setting"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#0099CC"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nomal Mode"
        android:id="@+id/nomal_mode"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="3dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="#D9D9D2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sound Reproduce"
        android:id="@+id/sound_reproduce"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="3dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="#D9D9D2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Punch The Ball"
        android:id="@+id/punch_the_ball"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="3dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="#D9D9D2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Discover More..."
        android:id="@+id/discover_more"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="3dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="#D9D9D2"
        />

</LinearLayout>